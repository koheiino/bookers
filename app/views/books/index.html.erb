<div class="container">
<h1>books</h1>

  <div class="list-wrap">
    <div class="contents-wrap">
      <h2>title</h2>
      <% @books.each do |book| %>
      <p><%= book.title %></p>
      <% end %>
    </div>
    <div class="contents-wrap">
        <h2>body</h2>
        <% @books.each do |book| %>
        <p><%= book.body %></p>
          <p><%= link_to '詳細', book_path(book) %></p>
          <% end %>
      </div>
    </div>
    <h2>新規投稿</h2>
<% if @book.errors.any? %>
  <% @book.errors.count %>件エラー発生
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @books, url: books_path, method: :post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>感想</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>
  </div>
</div>