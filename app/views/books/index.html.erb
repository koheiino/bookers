      <ul>
        <% @book_posts.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </div>
    </ul>
    <% end %>
    <%= form_with model: @books, url: books_path, method: :post do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
    <% end %>
</div>