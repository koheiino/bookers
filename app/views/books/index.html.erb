<div class="container">
  <div>
  <%= flash[:notice] %>
</div>
  <h1>books</h1>
  <div class="list-wrap">
    <div class="contents-wrap">
      <h2>title</h2>
      <% @books.each do |book| %>
      <p><%= book.title %></p>
      <% end %>
    </div>
    <div class="contents-wrap">
        <h2>body</h2>
        <% @books.each do |book| %>
        <p class="right-layout"><%= book.body %></p>
          <p class="right-layout"><%= link_to 'show', book_path(book) %></p>
          <p class="right-layout"><%= link_to "edit", edit_book_path(book.id) %></p>
          <p class="right-layout"><%= link_to "削除", book_path(book.id), method: :delete, "data-confirm"=> "Are you sure?"  %></p>
        <% end %>
    </div>
  </div>
    <h2>新規投稿</h2>
<% if @book.errors.any? %>
  <% @book.errors.count %>件エラー発生
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @books, url: books_path, method: :post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>感想</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>
  </div>
</div>